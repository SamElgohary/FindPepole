<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overcast"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/music_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:background="@color/overcast"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_ice_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:text="test"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/video_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:background="@color/overcast"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:src="@drawable/ic_exit_to_app_ice_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:text="test"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/class_view_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:background="@color/overcast"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:paddingRight="@dimen/_2sdp"
                    android:src="@drawable/ic_exit_to_app_ice_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:text="test"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bus_tracking_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:background="@color/overcast"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_ice_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:text="test"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/food_menu_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:background="@color/overcast"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_ice_24dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:text="test"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/overcast"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit_to_app_ice_24dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:text="@string/logout"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@color/overcast"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayDark"
                    android:textSize="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:text="@string/about"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>