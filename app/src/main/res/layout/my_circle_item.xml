<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/user_item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:background="@color/overcast"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_img_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:src="@drawable/user"
            android:layout_weight="1"
            app:civ_border_color="@color/ice"
            app:civ_border_width="2dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left"
            android:textSize="@dimen/_14ssp" />

       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           android:layout_weight="1.5">

           <ImageView
               android:id="@+id/chat_icon"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="@dimen/_4sdp"
               android:src="@drawable/ic_chat_black_24dp"
               android:layout_weight="1"/>

           <ImageView
               android:id="@+id/live_location_icon"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="@dimen/_4sdp"
               android:src="@drawable/ic_location_searching_black_24dp"
               android:layout_weight="1"/>

       </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/ice"
        android:layout_height="@dimen/_1sdp"/>


</LinearLayout>